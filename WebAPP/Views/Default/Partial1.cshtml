@using WebAPP.Models.Sınıflar
@model List<Blog>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Partial1</title>
</head>
<body>
    <div>

        <div class="con-bot">
            @foreach (var x in Model)
            {
                <div class="left">
                    <div class="bot-left">
                        <img src="@x.BlogImage" alt="" />
                    </div>
                    <div class="left-text">
                        <h4>@x.Baslik</h4>
                        <span> @x.Tarih.ToString("dd.mm.yyyy")</span>
                        <p>@x.Aciklama.Substring(0,20)</p>
                        <p><a href="/Blog/BlogDetay/@x.ID"><span class="read">Devamını Oku >></span></a></p>
                    </div>

                </div>

            }




            <div class="clear"></div>
        </div>
    </div>

</body>
</html>
